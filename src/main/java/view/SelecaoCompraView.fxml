<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CompraIngressoController"
      prefHeight="600.0" prefWidth="600.0"
      spacing="20" alignment="CENTER">

   <children>
      <Label text="Escolha a peça" style="-fx-font-size: 18px;" />

      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <ToggleButton fx:id="btnRomeuJulieta" contentDisplay="GRAPHIC_ONLY" prefHeight="150" prefWidth="160" styleClass="botao-peca">
               <graphic>
                  <ImageView fitHeight="180" fitWidth="160" preserveRatio="true" pickOnBounds="true">
                     <image><Image url="@images/romeuejulieta.jpeg"/></image>
                  </ImageView>
               </graphic>
            </ToggleButton>

            <ToggleButton fx:id="btnAutoCompadecida" contentDisplay="GRAPHIC_ONLY" prefHeight="150" prefWidth="160" styleClass="botao-peca">
               <graphic>
                  <ImageView fitHeight="180" fitWidth="160" preserveRatio="true" pickOnBounds="true">
                     <image><Image url="@images/autodacompadecida.png"/></image>
                  </ImageView>
               </graphic>
            </ToggleButton>

            <ToggleButton fx:id="btnChapeuzinho" contentDisplay="GRAPHIC_ONLY" prefHeight="150" prefWidth="135" styleClass="botao-peca">
               <graphic>
                  <ImageView fitHeight="180" fitWidth="135" preserveRatio="true" pickOnBounds="true">
                     <image><Image url="@images/chapeuzinhovermelho.jpg"/></image>
                  </ImageView>
               </graphic>
            </ToggleButton>
         </children>
      </HBox>

      <Label text="Escolha o horário" style="-fx-font-size: 18px;" />

      <HBox alignment="CENTER" spacing="40.0">
         <children>
            <ToggleButton fx:id="btnHorario1" text="Horário 1" prefWidth="140" styleClass="botao-horario" />
            <ToggleButton fx:id="btnHorario2" text="Horário 2" prefWidth="140" styleClass="botao-horario" />
            <ToggleButton fx:id="btnHorario3" text="Horário 3" prefWidth="140" styleClass="botao-horario" />
         </children>
      </HBox>

      <Label text="Escolha a área" style="-fx-font-size: 18px;" />

      <VBox fx:id="boxAreas" spacing="10" alignment="CENTER">
         <children>
            <ToggleButton fx:id="btnPlateiaA" text="Plateia A (R$ 40,00)" styleClass="botao-area" />
            <ToggleButton fx:id="btnPlateiaB" text="Plateia B (R$ 60,00)" styleClass="botao-area" />
            <ToggleButton fx:id="btnFrisa" text="Frisa (R$ 120,00)" styleClass="botao-area" />
            <ToggleButton fx:id="btnCamarote" text="Camarote (R$ 80,00)" styleClass="botao-area" />
            <ToggleButton fx:id="btnBalcaoNobre" text="Balcão Nobre (R$ 250,00)" styleClass="botao-area" />
         </children>
      </VBox>

      <HBox spacing="20" alignment="CENTER">
         <children>
            <Button fx:id="btnVoltar" text="Voltar" onAction="#voltar" />
            <Button fx:id="btnEscolherAssento" text="Escolher assento" onAction="#escolherAssento" />
         </children>
      </HBox>
   </children>
</VBox>
