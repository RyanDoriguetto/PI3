<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CadastroUsuarioController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Nome:" />
        <TextField fx:id="nomeField" prefWidth="300" />

        <Label text="CPF:" />
        <TextField fx:id="cpfField" prefWidth="300" />

        <Label text="Telefone:" />
        <TextField fx:id="telefoneField" prefWidth="300" />

        <Label text="Data de Nascimento (dd/mm/aaaa):" />
        <DatePicker fx:id="dataNascPicker" prefWidth="300" />

        <Label text="Rua:" />
        <TextField fx:id="ruaField" prefWidth="300" />

        <Label text="Quadra:" />
        <TextField fx:id="quadraField" prefWidth="300" />

        <Label text="Lote:" />
        <TextField fx:id="loteField" prefWidth="300" />

        <Label text="Bairro:" />
        <TextField fx:id="bairroField" prefWidth="300" />

        <Label text="Cidade:" />
        <TextField fx:id="cidadeField" prefWidth="300" />

        <Label text="Estado:" />
        <ComboBox fx:id="estadoComboBox" prefWidth="300" />

        <HBox spacing="10">
            <Button text="Salvar" onAction="#salvarUsuario" prefWidth="140" />
            <Button text="Voltar" onAction="#voltarTelaInicial" prefWidth="140" />
        </HBox>
    </children>
</VBox>
